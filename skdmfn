import streamlit as st

# ì›¹ì•± ì œëª©
st.title("ğŸ“ ìƒí™œ ì† ë„ìš°ë¯¸ ì›¹ì•±")

# -----------------------------
# 1. ë¬¸ì¥ / ë‹¨ì–´ / ê¸€ì ìˆ˜ ë¶„ì„ê¸°
# -----------------------------
st.header("1ï¸âƒ£ ë¬¸ì¥ / ë‹¨ì–´ / ê¸€ì ìˆ˜ ë¶„ì„ê¸°")

# ì‚¬ìš©ìë¡œë¶€í„° í…ìŠ¤íŠ¸ ì…ë ¥ ë°›ê¸°
text = st.text_area("ë¶„ì„í•  ë¬¸ì¥ì„ ì…ë ¥í•˜ì„¸ìš”:")

if text:
    # ë¬¸ì¥ ìˆ˜: ë§ˆì¹¨í‘œ, ëŠë‚Œí‘œ, ë¬¼ìŒí‘œ ê¸°ì¤€ìœ¼ë¡œ ê°„ë‹¨ ì¶”ì •
    sentence_count = text.count('.') + text.count('!') + text.count('?')
    # ë‹¨ì–´ ìˆ˜: ê³µë°± ê¸°ì¤€ìœ¼ë¡œ ë‚˜ëˆˆ ê°œìˆ˜
    word_count = len(text.split())
    # ê¸€ì ìˆ˜: ê³µë°± ì œì™¸
    char_count = len(text.replace(" ", ""))

    # ê²°ê³¼ ì¶œë ¥
    st.success("ğŸ“Š ë¶„ì„ ê²°ê³¼")
    st.write(f"- ë¬¸ì¥ ìˆ˜: {sentence_count}")
    st.write(f"- ë‹¨ì–´ ìˆ˜: {word_count}")
    st.write(f"- ê¸€ì ìˆ˜ (ê³µë°± ì œì™¸): {char_count}")

# -----------------------------
# 2. ì˜¨ë„ ë³€í™˜ê¸°
# -----------------------------
st.header("2ï¸âƒ£ ì˜¨ë„ ë³€í™˜ê¸° (ì„­ì”¨ â†” í™”ì”¨)")

# ì‚¬ìš©ì ì…ë ¥: ì˜¨ë„ ê°’
temperature = st.number_input("ì˜¨ë„ë¥¼ ì…ë ¥í•˜ì„¸ìš”:", step=0.1)

# ì‚¬ìš©ì ì„ íƒ: ë³€í™˜ ë°©í–¥
conversion = st.radio("ë³€í™˜í•  ë°©í–¥ì„ ì„ íƒí•˜ì„¸ìš”:", ("ì„­ì”¨ â†’ í™”ì”¨", "í™”ì”¨ â†’ ì„­ì”¨"))

# ë³€í™˜ ê²°ê³¼ ê³„ì‚°
if conversion == "ì„­ì”¨ â†’ í™”ì”¨":
    result = (temperature * 9/5) + 32
    st.write(f"ğŸŒ¡ï¸ ë³€í™˜ ê²°ê³¼: {result:.2f} â„‰")
else:
    result = (temperature - 32) * 5/9
    st.write(f"ğŸŒ¡ï¸ ë³€í™˜ ê²°ê³¼: {result:.2f} â„ƒ")
